<div class="batch">
	<section class="control-wrapper">
		<title>
			<h1>Renewal Batch: {{model.name}}</h1>
			<p>{{model.month}}: {{format-date model.startDate "MMM D, YYYY"}} - {{format-date model.endDate "MMM D, YYYY"}}</p>
		</title>
		<div class="button-wrapper">
			{{#unless model.isCommitted}}
				<button class="transparent" {{action "deleteBatch"}}>{{fa-icon "trash"}}</button>
				{{#link-to "lro.renewals.batches.batch.home.terms" tagName="button" class="transparent"}}Lease Terms{{/link-to}}
				{{#link-to "lro.renewals.batches.batch.home.params" tagName="button" class="transparent"}}Parameters{{/link-to}}
				<button class="with-icon transparent" {{action "closeBatch"}}>{{fa-icon "times"}}Close</button>
				{{#if model.readyForCommit}}
					<button class="with-icon" {{action "commitBatch"}}>{{fa-icon "check"}}Commit Batch</button>
				{{else}}
					<button class="with-icon" {{action "approveBatch"}}>{{fa-icon "thumbs-up"}}Approve All</button>
				{{/if}}
			{{else}}
				<button class="with-icon" {{action "closeBatch"}}>{{fa-icon "times"}}Close</button>
			{{/unless}}
		</div>
	</section>
	<section class="batch-content">
		<section class="rb-summary">
			<div class="col col-25">
				<div class="chart">
					{{high-charts mode=chartMode content=model.chartData chartOptions=chartOptions}}
				</div>
			</div
			><div class="col col-40">
				{{high-charts mode=chartMode content=model.detailChartData chartOptions=detailChartOptions}}
			</div
			><div class="col col-20">
				<table class="rb-metrics-table no-hover">
					<tr style="height: 80px">
						<td style="border: none;">
							<div class="rb-metric-title">Average Increase</div>
							<div class="rb-metric">{{format-percent model.avgIncrease}}</div>
						</td>
						<td style="border: none;">
							<div class="rb-metric-title">Increase Range</div>
							<div class="rb-metric">{{format-percent model.minIncrease}} - {{format-percent model.maxIncrease}}</div>
						</td>
					</tr>
					<tr style="height: 80px">
						<td style="border: none;">
							<div class="rb-metric-title">Current Avg. DTM</div>
							<div class="rb-metric">{{format-percent model.avgCurrentDiscountToMarket}}</div>
						</td>
						<td style="border: none;">
							<div class="rb-metric-title">Current DTM Range</div>
							<div class="rb-metric">{{format-percent model.minCurrentDiscountToMarket}} - {{format-percent model.maxCurrentDiscountToMarket}}</div>
						</td>
					</tr>
					<tr style="height: 80px">
						<td style="border: none;">
							<div class="rb-metric-title">New Avg. DTM</div>
							<div class="rb-metric">{{format-percent model.avgNewDiscountToMarket}}</div>
						</td>
						<td style="border: none;">
							<div class="rb-metric-title">New DTM Range</div>
							<div class="rb-metric">{{format-percent model.minNewDiscountToMarket}} - {{format-percent model.maxNewDiscountToMarket}}</div>
						</td>
					</tr>
				</table>
			</div
			><div class="col col-15">
				{{high-charts mode=chartMode content=model.donutChartData chartOptions=donutChartOptions}}
				<div class="center">
					<h2 class="std-bottom-margin">Overrides</h2>
					<h1>{{format-commas model.overrideCount}}</h1>
				</div>
			</div>
		</section>
		<section class="rb-details">
			<div class="rb-detail-nav">
				<div class="tab-menu tm-4 rb-detail-tabs inline no-border {{if showDetailFilters 'filters-open'}}">
					<div {{action "toggleCommunityView"}} class="{{if communityView 'active'}}">Community View</div
					><div {{action "toggleUnitView"}} class="{{if unitView 'active'}}">Unit View</div>
				</div>
				{{#if unitFiltersApplied}}
					<div class="filter-tag clickable" {{action "clearUnitFilters"}}>
						Clear unit filters
						{{fa-icon "times-circle"}}
					</div>
				{{/if}}
				{{#if communityFiltersApplied}}
					<div class="filter-tag clickable" {{action "clearCommunityFilters"}}>
						Clear community filters
						{{fa-icon "times-circle"}}
					</div>
				{{/if}}
				{{#if unitView}}
					<button class="with-icon float-right std-right-margin" {{action "approveFilteredUnits"}}>{{fa-icon "thumbs-up"}}Approve Filtered Units</button>
				{{else}}
					<button class="with-icon float-right std-right-margin" {{action "approveFilteredCommunities"}}>{{fa-icon "thumbs-up"}}Approve Filtered Communities</button>
				{{/if}}
			</div>
			<section class="rb-detail-content">
				<div class="filter-panel {{if showDetailFilters 'open' 'closed'}} no-mobile">
					{{#if showDetailFilters}}
						<div class="filter-header">
							{{fa-icon "sliders"}}
							Filters
							<i class="fa fa-arrow-left close" {{action "closeDetailFilterPane"}}></i>
						</div>
						<div class="filter-content">
							{{#if unitView}}
								<div class="filter">
									<div>
										<div class="label">Increase <br>({{format-percent model.minIncrease 1}} - {{format-percent model.maxIncrease 1}}):</div>
										{{input type="number" value=minIncFilter}}<span>to</span>{{input type="number" value=maxIncFilter}}
									</div>
								</div>
								<div class="filter">
									<div>
										<div class="label">Current DTM<br>({{format-percent model.minCurrentDiscountToMarket 1}} - {{format-percent model.maxCurrentDiscountToMarket 1}}):</div>
										{{input type="number" value=minCurrentDtmFilter}}<span>to</span>{{input type="number" value=maxCurrentDtmFilter}}
									</div>
								</div>
								<div class="filter">
									<div>
										<div class="label">New DTM<br>({{format-percent model.minNewDiscountToMarket 1}} - {{format-percent model.maxNewDiscountToMarket 1}}):</div>
										{{input type="number" value=minNewDtmFilter}}<span>to</span>{{input type="number" value=maxNewDtmFilter}}
									</div>
								</div>
								<div class="filter">
									<div class="input-control">
										<div class="label block">Community</div>
										<div class="control block">
											{{select-2 content=model.communityNames value=communityFilter placeholder="All" allowClear=true multiple=false}}
										</div>
									</div>
								</div>
								<div class="filter">
									{{input-control value=overrideUnitFilter type="toggle" label="Overrides Only" orientation="block"}}
								</div>
								<div class="filter">
									{{input-control value=unapprovedUnitFilter type="toggle" label="Unapproved Only" orientation="block"}}
								</div>
								<div class="filter">
									<div class="input-control">
										<div class="label block">Beds</div>
										<div class="control block">
											{{select-2 value=bedsFilter content=model.beds placeholder="All" allowClear=true}}
										</div>
									</div>
								</div>
								<div class="filter">
									<div class="input-control">
										<div class="label block">Baths</div>
										<div class="control block">
											{{select-2 value=bathsFilter content=model.baths placeholder="All" allowClear=true}}
										</div>
									</div>
								</div>
								<div class="filter">
									<div class="input-control">
										<div class="label block">LRO Unit Type</div>
										<div class="control block">
											{{select-2 value=unitTypeFilter content=model.unitTypes placeholder="All" allowClear=true}}
										</div>
									</div>
								</div>
								<div class="filter">
									<div class="input-control">
										<div class="label block">PMS Unit Type</div>
										<div class="control block">
											{{select-2 value=pmsUnitTypeFilter content=model.pmsUnitTypes placeholder="All" allowClear=true}}
										</div>
									</div>
								</div>
							{{else}}
								<div class="filter">
									<div>
										<div class="label">Avg. Increase <br>({{format-percent avgIncreaseMin 100}} - {{format-percent avgIncreaseMax 100}}):</div>
										{{input type="number" value=minAvgIncFilter}}<span>to</span>{{input type="number" value=maxAvgIncFilter}}
									</div>
								</div>
								<div class="filter">
									<div>
										<div class="label">Current DTM<br>({{format-percent avgCurrentDtmMin 100}} - {{format-percent avgCurrentDtmMax 100}}):</div>
										{{input type="number" value=minAvgCurrentDtmFilter}}<span>to</span>{{input type="number" value=maxAvgCurrentDtmFilter}}
									</div>
								</div>
								<div class="filter">
									<div>
										<div class="label">New DTM<br>({{format-percent avgNewDtmMin 100}} - {{format-percent avgNewDtmMax 100}}):</div>
										{{input type="number" value=minAvgNewDtmFilter}}<span>to</span>{{input type="number" value=maxAvgNewDtmFilter}}
									</div>
								</div>
								<div class="filter">
									<div class="input-control">
										<div class="label block">Community</div>
										<div class="control block">
											{{select-2 content=model.communityNames value=communityFilter placeholder="All" allowClear=true multiple=false}}
										</div>
									</div>
								</div>
								<div class="filter">
									{{input-control value=overrideCommunityFilter type="toggle" label="Overrides Only" orientation="block"}}
								</div>
								<div class="filter">
									{{input-control value=unapprovedCommunityFilter type="toggle" label="Unapproved Only" orientation="block"}}
								</div>
							{{/if}}
						</div>
					{{else}}
						<div class="filter-header" {{action "openDetailFilterPane"}}>
							{{fa-icon "sliders"}}
						</div>
					{{/if}}
				</div>
				<div class="table-wrapper  {{if showDetailFilters 'filters-open'}}">
					{{#if unitView}}
						<table>
							<thead>
								<tr class="border-right">
									<th colspan=2>Community</th>
									<th colspan=2>Unit Type</th>
									<th rowspan=2 {{action "sortUnits" "beds"}}>Beds</th>
									<th rowspan=2 {{action "sortUnits" "baths"}}>Baths</th>
									<th rowspan=2 {{action "sortUnits" "unitNumber"}}>Unit Number</th>
									<th rowspan=2 {{action "sortUnits" "renewalDate"}}>Renewal Date</th>
									<th colspan=2>Lease Term</th>
									<th colspan=3>Effective Rent</th>
									<th rowspan=2 {{action "sortUnits" "userIncreasePct"}}>Increase %</th>
									<th colspan=2>Discount to Market</th>
									{{#unless model.isCommitted}}
										<th rowspan=2></th>
									{{/unless}}
								</tr>
								<tr class="sortable">
									<th {{action "sortUnits" "communityName"}}>Code</th>
									<th {{action "sortUnits" "communityCode"}} class="border-right">Community Name</th>
									<th class="no-mobile" {{action "sortUnits" "pmsUnitType"}}>PMS</th>
									<th {{action "sortUnits" "unitType"}} class="border-right">LRO</th>
									<th class="no-mobile" {{action "sortUnits" "currentLeaseTerm"}}>Current</th>
									<th class="no-mobile" {{action "sortUnits" "recLeaseTerm"}} class="border-right">New</th>
									<th class="no-mobile" {{action "sortUnits" "currentRent"}}>Current</th>
									<th {{action "sortUnits" "finalRecRent"}}>New</th>
									<th class="no-mobile" {{action "sortUnits" "cmr"}} class="border-right">Market</th>
									<th {{action "sortUnits" "finalDiscountToMarket"}}>Current</th>
									<th {{action "sortUnits" "finalDiscountToMarket"}} class="border-right">New</th>
								</tr>
							</thead>
							<tbody>
								{{#each hbsUnitContent as |unit|}}
									{{#link-to "lro.renewals.batches.batch.home.unit" unit.id tagName="tr"}}
										<td>{{unit.communityCode}}</td>
										<td class="no-mobile border-right">{{unit.communityName}}</td>
										<td class="no-mobile">{{unit.pmsUnitType}}</td>
										<td class="border-right">{{unit.unitType}}</td>
										<td class="no-mobile border-right">{{format-commas unit.beds}}</td>
										<td class="no-mobile border-right">{{format-commas unit.baths}}</td>
										<td class="border-right">{{unit.unitNumber}}</td>
										<td class="no-mobile border-right">{{format-date unit.renewalDate}}</td>
										<td class="no-mobile">{{format-commas unit.currentLeaseTerm}}</td>
										<td class="no-mobile border-right">{{format-commas unit.recLeaseTerm}}</td>
										<td class="no-mobile">${{format-commas unit.currentRent}}</td>
										<td class="{{if unit.userOverrideMode 'red'}}">${{format-commas unit.finalRecRent}}</td>
										<td class="no-mobile border-right">${{format-commas unit.cmr}}</td>
										<td class="border-right{{if unit.userOverrideMode 'red'}}">{{format-percent unit.userIncreasePct 1 1}}</td>
										<td>{{format-percent unit.currentDiscountToMarket 1 1}}</td>
										<td class="border-right">{{format-percent unit.finalDiscountToMarket 1 1}}</td>
										{{#unless model.isCommitted}}
											<td>
												{{#if unit.approved}}
													<i class="fa fa-thumbs-o-down gray" {{action "unapproveUnit" unit bubbles=false}}></i>
												{{else}}
													<i class="fa fa-thumbs-o-up" {{action "approveUnit" unit bubbles=false}}></i>
												{{/if}}
											</td>
										{{/unless}}
									{{/link-to}}
								{{/each}}
							</tbody>
						</table>
					{{else}}
						<table>
							<thead>
								<tr class="sortable border-right">
									<th {{action "sortCommunities" "communityCode"}}>Code</th>
									<th {{action "sortCommunities" "communityName"}}>Community Name</th>
									<th {{action "sortCommunities" "expirationCount"}}>Expirations</th>
									<th class="no-mobile" {{action "sortCommunities" "avgRecRent"}}>Avg Rec Rent</th>
									<th {{action "sortCommunities" "avgIncrease"}}>Avg Increase</th>
									<th class="no-mobile" {{action "sortCommunities" "avgRecLeaseTerm"}}>Avg Rec Term</th>
									<th>Increase Range</th>
									<th class="no-mobile" {{action "sortCommunities" "avgCurrentDiscountToMarket"}}>Current Avg DTM</th>
									<th class="no-mobile" {{action "sortCommunities" "avgNewDiscountToMarket"}}>New Avg DTM</th>
									{{#unless model.isCommitted}}
										<th></th>
									{{/unless}}
								</tr>
							</thead>
							<tbody>
								{{#each hbsCommunityContent as |comm|}}
									{{#link-to "lro.renewals.batches.batch.community" comm.id tagName="tr" class="border-right"}}
										<td class="left">{{comm.communityCode}}</td>
										<td class="left">{{comm.communityName}}</td>
										<td>{{format-commas comm.expirationCount}}</td>
										<td class="no-mobile">${{format-commas comm.avgRecRent}}</td>
										<td>{{format-percent comm.avgIncrease 1 1}}</td>
										<td class="no-mobile">{{format-commas comm.avgRecLeaseTerm}}</td>
										<td>{{format-percent comm.minIncrease 1 1}} - {{format-percent comm.maxIncrease 1 1}}</td>
										<td class="no-mobile">{{format-percent comm.avgCurrentDiscountToMarket 1 1}}</td>
										<td class="no-mobile">{{format-percent comm.avgNewDiscountToMarket 1 1}}</td>
										{{#unless model.isCommitted}}
											<td>
												{{#if comm.allApproved}}
													<i class="fa fa-thumbs-o-down gray" {{action "unapproveCommunity" comm bubbles=false}}></i>
												{{else}}
													<i class="fa fa-thumbs-o-up" {{action "approveCommunity" comm bubbles=false}}></i>
												{{/if}}
											</td>
										{{/unless}}
									{{/link-to}}
								{{/each}}
							</tbody>
						</table>
					{{/if}}
				</div>
			</section>
		</section>
	</section>
	{{outlet}}
</div>
