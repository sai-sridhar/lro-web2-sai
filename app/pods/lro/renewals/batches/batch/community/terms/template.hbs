<div class="overlay show">
	<div class="overlay-content w600">
		<header>
			<h2><b>Modify Community Lease Terms</b></h2>
			{{#link-to "lro.renewals.batches.batch.community" tagName="div" class="close"}}{{fa-icon "times"}}{{/link-to}}
		</header>
		<section class="scroll-content">
			<div class="single-column">
				<section class="rb-lease-terms">
					<h3>Select lease terms to offer:</h3>
					{{lease-term-chooser}}
				</section>
				<section>
					<h3>Select unit types to apply to:</h3>
					{{my-select2 content=unitTypes selectedObjects=selectedUnitTypes selectAll=true selectMultiple=true placeholderPlural="Select unit types..." displayProp="unitType"}}
				</section>
			</div>
		</section>
		<footer>
			{{#link-to "lro.renewals.batches.batch.community" tagName="button" class="with-icon"}}{{fa-icon "check"}}Apply{{/link-to}}
			{{#link-to "lro.renewals.batches.batch.community" tagName="button" class="white with-icon"}}{{fa-icon "times"}}Cancel{{/link-to}}
		</footer>
	</div>
</div>
