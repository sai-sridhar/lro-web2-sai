<div class="overlay show">
	<div class="overlay-content w600">
		<header>
			<h2><b>Add User to Group</b></h2>
			<div class="close" {{action "cancel"}}>{{fa-icon "times"}}</div>
		</header>
		<section class="scroll-content">
			{{select-2 content=model value=selectedUsers optionLabelPath="fullName" placeholder="Choose users..." allowClear=true multiple=true}}
			{{select-2 content=roles value=selectedRole optionLabelPath="roleName" placeholder="Choose role" allowClear=true multiple=false}}
		</section>
		<footer>
			<button class="with-icon" {{action "apply"}}>{{fa-icon "check"}}Apply</button>
			<button class="white with-icon" {{action "cancel"}}>{{fa-icon "times"}}Cancel</button>
		</footer>
	</div>
</div>
