<section>
	<h3>Below Market Rent:</h3>
	<table class="style-a">
		<thead>
			<tr>
				<th colspan=3>% Below Market</th>
				<th>Bring to <br> Market Rate</th>
				<th>Min <br> Increase %</th>
				<th>Max <br> Increase %</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{{#each belowMarketContent as |range|}}
				<tr>
					<td>{{input type="number" width=80 value=range.from focus-out="saveRanges"}}</td>
					<td class="to"> to </td>
					<td>
						{{#if range.to}}
							{{input type="number" width=80 value=range.to focus-out="saveRanges"}}
						{{else}}
							<span>Infinity</span>
						{{/if}}
					</td>
					<td>{{input type="number" width=80 value=range.bringToMktRate focus-out="saveRanges"}}</td>
					<td>{{input type="number" width=80 value=range.minIncrease focus-out="saveRanges"}}</td>
					<td>{{input type="number" width=80 value=range.maxIncrease focus-out="saveRanges"}}</td>
					<td><span {{action "deleteRange" range}}>{{fa-icon "trash-o"}}</span></td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	<div class="select-deselect-all">
		<div {{action "addRange" "below"}}>Add Range</div>
	</div>
</section>
<section>
	<h3>At Market Rent:</h3>
	<label for="flat-increase">Increase %</label>
	{{input type="number" id="flat-increase" value=atMarketContent.firstObject.minIncrease}}
</section>
<section>
	<h3>Above Market Rent:</h3>
	<table class="style-a">
		<thead>
			<tr>
				<th colspan=3>% Above Market</th>
				<th>Increase %</th>
			</tr>
		</thead>
		<tbody>
			{{#each aboveMarketContent as |range|}}
				<tr>
					<td>{{input type="number" width=80 value=range.from}}</td>
					<td class="to"> to </td>
					<td>
						{{#if range.to}}
							{{input type="number" width=80 value=range.to}}
						{{else}}
							<span>Infinity</span>
						{{/if}}
					</td>
					<td>{{input type="number" width=80 value=range.minIncrease}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	<div class="select-deselect-all">
		<div {{action "addRange" "below"}}>Add Range</div>
	</div>
</section>
