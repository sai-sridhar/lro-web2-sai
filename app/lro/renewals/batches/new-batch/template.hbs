<div class="overlay">
	<div class="overlay-content">
		<header>
			<h2><b>Create New Renewal Batch</b></h2>
			{{#link-to "lro.renewals.batches" tagName="div" class="close"}}{{fa-icon "times"}}{{/link-to}}
		</header>
		<section class="scroll-content">
			<div class="left-column">
				{{input-control value=batchName type="text" label="Batch Name" orientation="inline"}}



				<div class="input-control">
					<div class="label "> Date Range </div>
					{{select-2 content=listContent value=month placeholder="Choose month..." allowClear=true multiple=false}}
				</div>
				<div class="input-control">
					<p>or</p>
					<div class="control">
						{{pikaday-input value=startDate minDate=startDateBegin maxDate=startDateEnd placeholder="Start date" format=dateFormat class="calendar"}}
						<span>to</span>
						{{pikaday-input value=endDate minDate=endDateBegin maxDate=endDateEnd placeholder="End date" format=dateFormat class="calendar"}}
					</div>
				</div>

				{{input-control value=includeMtm type="toggle" label="Include MTM?" orientation="inline"}}
				{{input-control value=mtmOnly type="toggle" label="MTM only?" orientation="inline"}}

			</div>
			<div class="vertical-divider"></div>
			<div class="right-column">
				<table>
					<thead>
						<tr>
							<th>Community Code</th>
							<th>Community Name</th>
						</tr>
					</thead>
					<tbody>
						{{#each model as |community|}}
							<tr {{action "selectCommunity" community}} class="{{if community.selected 'active'}}">
								<td>{{community.code}}</td>
								<td>{{community.name}}</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
				<div class="select-deselect-all">
					<div {{action "selectAll"}}>Select All</div>
					<div {{action "deselectAll"}}>Deselect All</div>
				</div>
			</div>
		</section>
		<footer>
			<button class="with-icon" {{action "createBatch"}}>{{fa-icon "check"}}Create Batch</button>
			{{#link-to "lro.renewals.batches" tagName="button" class="white with-icon"}}
				{{fa-icon "times"}}
				Cancel
			{{/link-to}}
		</footer>
	</div>
</div>

